<div class="site-footer">
    <div class="wrapper-1400">
        <!-- Footer bottom section -->
        <div class="footer-bottom">
            <div class="footer-left">
                <!-- Copyright -->
                <div class="copyright">
                    &copy; {{date format="YYYY"}} {{@site.title}}
                </div>
            </div>

            <div class="footer-right">
                <div class="footer-subscribe-form">
                    {{subscribe_form placeholder="youremail@example.com"}}
                </div>
                <div class="social-icons">
                    {{#if @site.twitter}}
                        <!-- Twitter -->
                        <a href="{{twitter_url}}" class="" target="_blank">
                            {{> "icons/twitter"}}
                        </a>
                    {{/if}}
                    
                    {{#if @site.facebook}}
                        <!-- Facebook -->
                        <a href="{{facebook_url}}" class="" target="_blank">
                            {{> "icons/facebook"}}
                        </a>
                    {{/if}}
                    
                    <!-- RSS -->
                    <a href="https://feedly.com/i/subscription/feed/{{url absolute="true"}}rss/" target="_blank">
                        {{> "icons/rss"}}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>